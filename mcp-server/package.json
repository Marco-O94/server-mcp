{
    "name": "mcp-database-server",
    "version": "1.0.0",
    "description": "MCP Server for MongoDB and MySQL databases",
    "main": "build/server.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "node build/http-server.js",
        "start:stdio": "node build/server.js",
        "dev": "tsx watch src/http-server.ts",
        "dev:stdio": "tsx watch src/server.ts",
        "clean": "rm -rf build",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "mongodb",
        "mysql",
        "database"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.4",
        "mongodb": "^6.10.0",
        "mysql2": "^3.11.4",
        "zod": "^3.23.8",
        "dotenv": "^16.4.5",
        "pino": "^9.5.0",
        "pino-pretty": "^11.3.0",
        "express": "^4.21.1",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/node": "^22.9.0",
        "@types/express": "^5.0.0",
        "@types/cors": "^2.8.17",
        "typescript": "^5.6.3",
        "tsx": "^4.19.2"
    }
}